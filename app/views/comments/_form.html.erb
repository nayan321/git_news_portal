<div class="container">
	<%= simple_form_for([@message, @message.comments.build]) do |f| %>



		<div class="form-group">
		<%= f.label :'Comment Here'%>
		</div>


		<div class="form-group">
		<%= f.text_area :content, class: "form-control"%>
		</div>


		<div class="actions">
			<%= f.submit :submit, class: "btn btn-primary" %>
		</div>


<% end%>
</div>